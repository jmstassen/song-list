<br>
<h1>Sign up</h1>

<%= render partial: "layouts/errors", locals: {object: @user} %>

<%= form_for(@user, url:'/signup') do |f| %>
  <br>
  <%= f.label :email %>
  <%= f.email_field :email %>
  <br>
  <br>
  <%= f.label :password %>
  <%= f.password_field :password %> 
  <br>
  <br>
  <%= f.label :display_name %>
  <%= f.text_field :display_name %>
  <br>
  <br>
  <br>
  <%= f.submit "Submit" %>

<% end %>