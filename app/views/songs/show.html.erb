<h1> <%= @song.title %> </h1>
<h2> <%= @song.songwriter %> </h2>
<p> Tempo: <%= @song.tempo %> | Key: <%= @song.key %> </p>
<p> <%= @song.note %> <p>
<p> <%= @song.link %> <p>

<% @song.lines.each do |l| %>
    <%= l.lyrics %>
    <%= l.chords %><br>
<% end %>

<%= form_for(@song) do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <br>
    <br>
    <%= f.label :songwriter %>
    <%= f.text_field :songwriter %>
    <br>
    <br>
    <%= f.label :tempo %>
    <%= f.text_field :tempo %>
    <br>
    <br>
    <%= f.label :key %> â™­
    <%= f.text_field :key %>
    <br>
    <br>
    <%= f.label :note %>
    <%= f.text_area :note %>
    <br>
    <br>
    <%= f.label :link %>
    <%= f.text_field :link %>
    <br>
    <br>
    <%= f.fields_for :lines do |l| %>
        <%= l.text_field :lyrics %> | <%= l.text_field :chords %> | <%= l.number_field :line_number %><br>
    <% end %>

    <%= link_to edit_song_path %>
  <% end %>