<h1>Edit Song</h1>

<%= render partial: "layouts/errors", locals: {object: @song} %>

<%= form_for([@setlist, @song]) do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br>
  <br>
  <%= f.label :songwriter %>
  <%= f.text_field :songwriter %>
  <br>
  <br>
  <%= f.label :tempo %>
  <%= f.text_field :tempo %>
  <%= f.label :key %> â™­
  <%= f.text_field :key %>
  <br>
  <br>
  <%= f.label :note %>
  <%= f.text_area :note %>
  <br>
  <br>
  <%= f.label :link %>
  <%= f.text_field :link %>
  <br>
  <br>
  <div class="line-wrapper">
    <div class="lyrics-column"> Lyrics </div>
    <div class= "chords-column"> Chords </div>
  </div>
  <%= f.fields_for :lines do |l| %>
    <div class="line-wrapper">
      <div class="lyrics-column"><%= l.text_field :lyrics %></div><div class="chords-column"><%= l.text_field :chords %></div><%= l.hidden_field :line_number %>
    </div>
  <% end %> 
  <br>
  <br>
  <%= f.submit "Update" %>
<% end %>

<%= button_to "Delete Song", song_path(@song), method: :delete, data: { confirm: "Would you like to delete this song? This cannot be undone." } %>